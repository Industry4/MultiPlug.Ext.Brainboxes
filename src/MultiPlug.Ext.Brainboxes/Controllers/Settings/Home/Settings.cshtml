@model MultiPlug.Ext.Brainboxes.Models.Settings.Home.Home

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                    <a style="line-height: 52px;" href="#"><img alt="Brainboxes Logo" src="assets/brainboxes/images/brainboxes.png"></a>
                </div>
                <div class="span4">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Brainboxes IO</p>
                </div>
                <div class="span4" style="text-align: right;">
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <h3 class="box-header">Devices</h3>
            <div class="box non-collapsible">
                <div class="btn-toolbar" style="margin: 0;">

                    <div class="btn-group">
                        <button id="btn-newdevice" class="btn btn-green" type="button">Add</button>
                        <button class="btn btn-green dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="/extensions/brainboxes/defaults/">Defaults</a></li>
                        </ul>
                    </div>
                    <!-- / .btn-group -->

                    <div class="btn-group">
                        <button id="discoverybtn" class="btn btn-blue">Discover</button>
                        <button class="btn btn-blue dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="/extensions/brainboxes/discovery/">Settings</a></li>
                        </ul>
                    </div>
                    <!-- / .btn-group -->
                </div>

                <table id="devicesTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th class="span3">IP Address</th>
                            <th class="span3">Name</th>
                            <th class="span3">Location</th>
                            <th class="span2">Status</th>
                            <th class="span1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Device in @Model.Devices)
                        {
                            <tr>
                                <td class="span3"><a href="extensions/brainboxes/device/?id=@Device.Guid">@Device.IPAddress</a></td>
                                <td class="span3"><a href="extensions/brainboxes/device/?id=@Device.Guid">@Device.Name</a></td>
                                <td class="span3"><a href="extensions/brainboxes/device/?id=@Device.Guid">@Device.Location</a></td>
                                <td class="span2"><a href="extensions/brainboxes/device/?id=@Device.Guid">@Device.Status</a></td>
                                <td class="span1"><a class="btn btn-red btn-deletedevice" href="extensions/brainboxes/device/delete/?id=@Device.Guid"><i class="icon-trash"></i></a></td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>

        <div class="row-fluid">
            <h3 class="box-header">Global Status</h3>
            <div class="box non-collapsible">

                <div class="row-fluid">

                    <div class="span12">
                        <h5>Trace Log</h5>
                        <textarea id="textarea-log" rows="5" class="span12">@Model.Log</textarea>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <script>
        var LogEventId = "@Model.LogEventId";
        var DiscoverDeviceEventId = "@Model.DiscoverDeviceEventId";
        var DevicesListEventId = "@Model.DevicesListEventId";
    </script>

    <script type="text/javascript" src="assets/brainboxes/js/devices.js"></script>
</form>