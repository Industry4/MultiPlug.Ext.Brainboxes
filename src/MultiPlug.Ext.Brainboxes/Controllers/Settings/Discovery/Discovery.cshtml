@model MultiPlug.Ext.Brainboxes.Models.Settings.Discovery.DiscoveryViewModel

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                    <a style="line-height: 52px;" href="#"><img alt="Brainboxes Logo" src="assets/brainboxes/images/brainboxes.png"></a>
                </div>
                <div class="span4">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Device Discovery</p>
                </div>
                <div class="span4" style="text-align: right;">
                    <a class="btn btn-black" style="height:44px; width:35px" href="extensions/brainboxes/"><i class="icon-arrow-left icon-large"></i><p>Back</p></a>
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        <h3 class="box-header">Start Discovery Event</h3>
        <div class="box">

            <div class="row-fluid">
                <div class="span4">
                    <div class="row-fluid">
                        <div class="span12">Event ID</div>
                        <div class="span12">
                            <input name="StartDeviceDiscoveryEventId" class="input-block-level" type="text" placeholder="ID" value="@Model.StartDeviceDiscoveryEventId">
                        </div>
                    </div>
                </div>

                <div class="span4">
                    <div class="row-fluid">
                        <div class="span12">Event Description</div>
                        <div class="span12">
                            <input name="StartDeviceDiscoveryEventDescription" class="input-block-level" type="text" placeholder="Description" value="@Model.StartDeviceDiscoveryEventDescription">
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <h3 class="box-header">Subscription</h3>
        <div class="box">

            <p>Brainbox devices can be discovered automatically using an supporting Extension service.</p>
            <div class="row-fluid">
                <div class="span4">
                    <div class="row-fluid">
                        <div class="span12">Subscription:</div>
                        <div class="span12">
                            <input name="DiscoverySubscription" class="input-block-level mp-event-picker" type="text" value="@Model.DiscoverySubscription" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</form>