@model MultiPlug.Ext.Brainboxes.Models.Settings.Device.Device

@functions{ 

    public string ColourState( MultiPlug.Base.Exchange.Payload thePayload )
    {
        string Result = "IOStateUnknown";

        if (thePayload.Pairs.Length > 0)
        {
            Result = thePayload.Pairs[0].Value == "1" ? "IOStateGreen" : "IOStateRed";
        }

        return Result;
    }

    public string isOutputChecked( int theValue)
    {
        return (theValue == 1) ? "checked" : "";
    }
}

<form action="" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="Guid" value="@Model.Guid" />
    <section class="row-fluid">

        <div class="row-fluid">
            <div class="box">
                <div class="span4">
                    <a style="line-height: 52px;" href="#"><img alt="Brainboxes Logo" src="assets/brainboxes/images/brainboxes.png"></a>
                </div>
                <div class="span4">
                    <p style="font-size:26px; line-height: 54px; text-align: center; margin: 0px;">Device Setup</p>
                </div>
                <div class="span4" style="text-align: right;">
                    <a class="btn btn-black" style="height:44px; width:35px" href="extensions/brainboxes/"><i class="icon-arrow-left icon-large"></i><p>Back</p></a>
                    <button type="submit" value="submit" style="height:54px; width:65px" class="item btn btn-green"><i class="icon-save icon-large"></i><p>Save</p></button>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <h3 class="box-header">Device Information</h3>
            <div class="box non-collapsible">
                <div class="row-fluid">
                    <div class="span6">
                        <div class="row-fluid"><div class="span12"><h5>IP Address</h5></div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <input name="IPAddress" class="input-block-level" type="text" value="@Model.IPAddress" />
                            </div>
                        </div>
                    </div>

                    <div class="span6">
                        <div class="row-fluid"><div class="span12"><h5>Name</h5></div></div>
                        <div class="row-fluid">
                            <div class="span12">
                                <input name="Name" class="input-block-level" type="text" value="@Model.Name" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="box non-collapsible">
                <div class="row-fluid">

                    <div class="span3">
                        <h5>Model</h5>
                        <p>@Model.ProductModel</p>
                    </div>

                    <div class="span3">
                        <h5>MAC</h5>
                        <p>@Model.MACAddress</p>
                    </div>

                    <div class="span3">
                        <h5>Firmware</h5>
                        <p>@Model.Firmware</p>
                    </div>

                    <div class="span3">
                        <h5>Location</h5>
                        <p>@Model.Location</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <h3 class="box-header">Status</h3>
            <div class="box non-collapsible">
  
                <div class="row-fluid">

                    <div class="span2">
                        <h5>Connection</h5>
                        <div class="row-fluid">

                            <div class="btn-group btn-group-vertical">
                                <button type="button" id="devicestatus" class="btn btn-black span12 disabled">@Model.Status</button>
                                <a class="btn span12 btn-red" id="connectbtn" href="#" >
                                    <i class="icon-exchange"></i> <span id="connectbtntext">@Model.ConnectButtonText</span>
                                </a>
                                <a class="btn btn-blue span12" href="http://@Model.IPAddress" target="_blank">
                                    <i class="icon-external-link"></i> Manage
                                </a>
                                <a class="btn btn-red span12" id="restartbtn" href="#">
                                    <i class="icon-refresh"></i> Restart
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="span10">
                        <h5>Trace Log</h5>
                        <textarea id="textarea-log" rows="5" class="span12">@Model.Log</textarea>
                    </div>

                </div>
            </div>
        </div>

        <div class="row-fluid">
            <h3 class="box-header">Events ( Inputs )</h3>
            <span class="box non-collapsible">

                <table id="eventsTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th class="span1">IO</th>
                            <th class="span3">Event ID</th>
                            <th class="span4">Event Description</th>
                            <th class="span1">High</th>
                            <th class="span1">Low</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Event in @Model.Events)
                        {
                            <tr>              
                                <td class="span1"><input type="hidden" name="IONumber" value="@Event.IOid"><p id ="IOStateColour-@Event.EventId" class="IOState @ColourState( Event.CachedValue )">@Event.IOid</p></td>
                                <td class="span3"><input name="EventId" class="input-block-level" type="text" placeholder="Event ID" value="@Event.EventId"></td>
                                <td class="span4"><input name="EventDescription" class="input-block-level" type="text" placeholder="Event Description" value="@Event.Description"></td>
                                <td class="span1"><input name="High" class="input-block-level" type="text" value="@Event.RisingEdge"></td>
                                <td class="span1"><input name="Low" class="input-block-level" type="text" value="@Event.FallingEdge"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row-fluid">
            <h3 class="box-header">Subscriptions ( Outputs )</h3>
            <div class="box non-collapsible">
                <div class="accordion" id="accordion">
                    @foreach (var Output in @Model.Outputs)
                    {
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <div class="row-fluid">

                                    <div class="span11">
                                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse-@Output.Name">
                                            Output @Output.Name
                                        </a>
                                    </div>
                                    <div class="span1">
                                        <label class="switch">
                                            <input id="@Output.UIToggleEventID" class="ToggleOutput" type="checkbox" @isOutputChecked( Output.Value )>
                                            <span class="slider"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div id="collapse-@Output.Name" class="accordion-body collapse" style="height: 0px;">
                                <div class="accordion-inner">

                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Event ID</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var Subscription in Output.Subscriptions)
                                            {
                                                <tr>
                                                    <td><a href="extensions/brainboxes/subscription/?device=@Model.Guid&output=@Output.Name&id=@Subscription.Guid">@Subscription.EventId</a></td>
                                                    <td>
                                                        <a class="btn btn-red delete-channel" href="extensions/brainboxes/subscription/delete/?device=@Model.Guid&output=@Output.Name&id=@Subscription.Guid"><i class="icon-trash"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <a class="btn btn-green" href="extensions/brainboxes/subscription/?device=@Model.Guid&output=@Output.Name&id=new"><i class="icon-plus-sign"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <script>
        var DeviceId = "@Model.Guid";
        var ConnectButtonEventId = "@Model.ConnectButtonEventId";
        var RestartButtonEventId = "@Model.RestartButtonEventId";
        var LogEventId = "@Model.LogEventId";
        var DeviceStatusEventId = "@Model.DeviceStatusEventId"
    </script>

    <script type="text/javascript" src="assets/brainboxes/js/device.js"></script>
</form>